<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:orientation="vertical">

    <!--
    Achtung! ListViewAdapter benÃ¶tigt scheinbar LinearLayout auf der obersten
    Ebene...
    -->

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:drawablePadding="5sp"
        android:paddingStart="2sp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:paddingStart="3sp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvDoUntil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:paddingStart="3sp"
        android:text="TextView"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkIsDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erledigt" />

    <CheckBox
        android:id="@+id/checkIsFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wichtig" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="2dp"
            android:contentDescription="Edit Button"
            android:src="@drawable/ic_edit" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>

